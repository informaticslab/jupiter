.navbar-right
	ul.nav.navbar-nav.navbar-right(ng-controller="navBarLoginCtrl")
		li.dropdown
			a.dropdown-toggle(href="")
				|Welcome, {{identity.currentUser.displayName}} 
				b.caret
			ul.dropdown-menu 
				li(ng-show="identity.currentUser.isLevelThree()")
					a(href="#/adminCRAdd") Add Node
				li(ng-show="identity.currentUser.isLevelThree()")
					a(href="#/adminCREdit") Edit/Delete Node	
				li(ng-show="identity.currentUser.isLevelTwo() || identity.currentUser.isLevelThree()")
					a(href="#/adminCRQueue") Request Queue
				li(ng-show="identity.currentUser.isLevelOne()")
					a(href="#/adminRights") Rights Management
				li 
					a(href="", ng-click="signout()") Logout
			
				

				